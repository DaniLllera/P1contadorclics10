<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_all"
        android:background="#FFB500"
        app:layout_constraintBottom_toTopOf="@id/button1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/contadorreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/button1mas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/reset"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"

        android:background="#D9FD07"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button1mas"
        app:layout_constraintTop_toBottomOf="@id/reset" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="#D9FD07"
        app:layout_constraintBottom_toTopOf="@id/button3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button2mas"
        app:layout_constraintTop_toBottomOf="@id/button1" />
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="#D9FD07"
        app:layout_constraintBottom_toBottomOf="@id/button4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button3mas"
        app:layout_constraintTop_toBottomOf="@id/button2" />
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="#D9FD07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button4mas"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <Button
        android:id="@+id/button1mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more1"
        android:background="#129B1E"
        app:layout_constraintRight_toLeftOf="@id/button1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/reset"
        app:layout_constraintLeft_toRightOf="@id/contadorDeClics1"
        />

    <Button
        android:id="@+id/button2mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more1"
        android:background="#129B1E"
        app:layout_constraintRight_toLeftOf="@id/button2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button1mas" />

    <Button
        android:id="@+id/button3mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more1"
        android:background="#129B1E"
        app:layout_constraintRight_toLeftOf="@id/button3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button2mas" />

    <Button
        android:id="@+id/button4mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more1"
        android:background="#129B1E"
        app:layout_constraintRight_toLeftOf="@id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3mas" />

    <TextView
        android:id="@+id/contadorDeClics1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/contadorDeClics2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button1mas"
        app:layout_constraintTop_toBottomOf="@id/contadorreset" />
    <TextView
        android:id="@+id/contadorDeClics2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/contadorDeClics3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button2mas"
        app:layout_constraintTop_toBottomOf="@id/contadorDeClics1" />

    <TextView
        android:id="@+id/contadorDeClics3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/contadorDeClics4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button3mas"
        app:layout_constraintTop_toBottomOf="@id/contadorDeClics2" />

    <TextView
        android:id="@+id/contadorDeClics4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button4mas"
        app:layout_constraintTop_toBottomOf="@id/contadorDeClics3" />

</androidx.constraintlayout.widget.ConstraintLayout>